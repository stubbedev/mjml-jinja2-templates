<mjml>
  <mj-body
    background-color="{{ __design__body_bg_color }}"
    color="{{ __design__body_bg_color }}"
    font-family="{{ __design__font_fam_title }}">
    <mj-section
      background-color="{{ __design__section_bg_color }}"
      background-repeat="no-repeat"
      text-align="center"
      vertical-align="top">
      <mj-column>
        <mj-image
          align="center"
          border="none"
          padding-bottom="{{ __design__pad_30 }}"
          padding="{{ __design__pad_10 }} {{ __design__pad_25 }}"
          href="{{ __design__shop_domain }}"
          src="{{ __design__shop_logo_url }}"
          target="_blank"
          title="{{ __design__shop_title }}"
          width="{{ __design__img_w_small }}"></mj-image>
      </mj-column>
    </mj-section>
    <mj-section background-color="{{ __design__text_alt_color }}">
      <mj-group>
        <mj-column>
          <mj-navbar
            base-url="{{ __design__shop_domain }}"
            hamburger="hamburger"
            ico-color="{{ __design__active_color }}">
            <mj-navbar-link href="{{ __design__shop_rel_url_home }}" color="{{ __design__active_alt_color }}">home</mj-navbar-link>
            <mj-navbar-link href="{{ __design__shop_rel_url_blog }}" color="{{ __design__active_alt_color }}">blog</mj-navbar-link>
            <mj-navbar-link href="{{ __design__shop_rel_url_store }}" color="{{ __design__active_alt_color }}">store</mj-navbar-link>
          </mj-navbar>
        </mj-column>
      </mj-group>
    </mj-section>
    <mj-section
      background-color="{{ __design__section_bg_color }}"
      background-repeat="no-repeat"
      text-align="center"
      vertical-align="top"
      padding="{{ __design__pad_0 }} {{ __design__pad_0 }} {{ __design__pad_0 }} {{ __design__pad_0 }}">
      <mj-column>
        <mj-text
          align="left"
          color="{{ __design__body_color_hx }}"
          font-family="{{ __design__font_fam_title }}"
          font-size="{{ __design__font_size_14 }}"
          line-height="{{ __design__font_size_22 }}"
          padding-bottom="{{ __design__pad_5 }}"
          padding-top="{{ __design__pad_25 }}"
          padding="{{ __design__pad_10 }} {{ __design__pad_25 }}">
          <p style="line-height: {{ __design__font_size_60 }}; text-align: center; margin: {{ __design__pad_10 }} {{ __design__pad_0 }};font-size:{{ __design__font_size_60 }};color:{{ __design__text_alt_color }};font-family:{{ __design__font_fam_cta }}">
            <b>Black Friday</b>
          </p>
        </mj-text>
        <mj-text
          align="left"
          color="{{ __design__body_color_hx }}"
          font-family="{{ __design__regular_font_family }}"
          font-size="{{ __design__regular_font_size }}"
          line-height="{{ __design__font_size_22 }}"
          padding-bottom="{{ __design__pad_20 }}"
          padding-top="{{ __design__pad_0 }}"
          padding="{{ __design__pad_10 }} {{ __design__pad_25 }}">
          <p style="line-height: {{ __design__font_size_30 }}; text-align: center; margin: {{ __design__pad_10 }} {{ __design__pad_0 }};color:{{ __design__text_alt_color }};font-size:{{ __design__font_size_24 }};font-family:{{ __design__font_fam_cta }}">
            <b>Take an&nbsp; extra 50% off</b><br/><span style="color:{{ __design__text_alt_color }};font-size:{{ __design__font_size_18 }};font-family:{{ __design__font_fam_cta }}">Use code SALEONSALE* at checkout</span>
          </p>
        </mj-text>
      </mj-column>
    </mj-section>
    {% for product in products %}
      {% assign loop_index = loop.index0 | int %}
      {% assign end_row_index = loop_index + __design__one %}
      {% assign row_start = (loop_index % __design__items_per_row == 0) %}
      {% assign row_end = (end_row_index % __design__items_per_row == 0) %}
      {% assign loop_last = loop.last %}
      {% if loop_index < 6 %}
        {% if loop_index == 0 or row_start %}
          <mj-section
            background-color="{{ __design__section_bg_color }}"
            padding-bottom="{{ __design__pad_20 }}"
            font-family="{{ __design__font_fam_section }}">
          {% endif %}
          <mj-column vertical-align="bottom">
            <mj-image
              src="{{ product.image }}"
              alt="{{ product.name }}"
              href="{{ product.url }}"
              align="center"
              border="none"
              width="{{ __design__img_w_small }}"
              padding-left="{{ __design__pad_0 }}"
              padding-right="{{ __design__pad_0 }}"
              padding-bottom="{{ __design__pad_20 }}"
              padding-top="{{ __design__pad_30 }}"></mj-image>
            <mj-text
              font-weight="bold"
              align="center"
              color="{{ __design__text_alt_color }}"
              font-size="{{ __design__pad_15 }}"
              padding-left="{{ __design__pad_25 }}"
              padding-right="{{ __design__pad_25 }}"
              padding-bottom="{{ __design__pad_0 }}"
              padding-top="{{ __design__pad_0 }}">
              <p>{{ product.name }}</p>
              <p style="color: {{ __design__text_alt_color }};">{{ __design__currency_symbol }}{{ product.price | money }}</p>
            </mj-text>
            <mj-button
              background-color="{{ __design__text_alt_color }}"
              color="{{ __design__active_alt_color }}"
              font-size="{{ __design__font_size_14 }}"
              align="center"
              padding="{{ __design__pad_15 }} {{ __design__pad_30 }}"
              border-radius="{{ __design__border_rd_3 }}"
              href="{{ product.url }}"
              padding-bottom="{{ __design__pad_10 }}"
              padding-top="{{ __design__pad_0 }}">{{ __design__cta_text }}</mj-button>
          </mj-column>
          {% if row_end or loop_last %}
          </mj-section>
        {% endif %}
      {% endif %}
    {% endfor %}

    <mj-section
      background-color="{{ __design__active_color }}"
      padding-bottom="{{ __design__pad_0 }}"
      font-family="{{ __design__font_fam_section }}"
      padding-top="{{ __design__pad_0 }}">
      <mj-column>
        <mj-image
          src="{{ __design__shop_logo_url }}"
          href="{{ __design__shop_domain }}"
          alt="Clerk logo"
          align="center"
          border="none"
          width="{{ __design__img_w_small }}"
          padding-left="{{ __design__pad_10 }}"
          padding-right="{{ __design__pad_10 }}"
          padding-bottom="{{ __design__pad_10 }}"
          padding-top="{{ __design__pad_10 }}"></mj-image>
      </mj-column>
      <mj-column>
        <mj-button
          align="right"
          href="{{ __design__shop_privacy_policy }}"
          background-color="transparent"
          color="{{ __design__text_alt_color }}"
          font-size="{{ __design__font_size_14 }}"
          padding-left="{{ __design__pad_25 }}"
          padding-right="{{ __design__pad_25 }}"
          padding-bottom="{{ __design__pad_25 }}"
          padding-top="{{ __design__pad_25 }}">
          Privacy policy
        </mj-button>
      </mj-column>
      <mj-column>
        <mj-social padding-top="{{ __design__pad_20 }}">
          {% if __design__social_facebook_url %}
            <mj-social-element name="facebook" href="{{ __design__social_facebook_url }}"></mj-social-element>
          {% endif %}
          {% if __design__social_twitter_url %}
            <mj-social-element name="twitter" href="{{ __design__social_twitter_url }}"></mj-social-element>
          {% endif %}
          {% if __design__social_google_url %}
            <mj-social-element name="google" href="{{ __design__social_google_url }}"></mj-social-element>
          {% endif %}
          {% if __design__social_pinterest_url %}
            <mj-social-element name="pinterest" href="{{ __design__social_pinterest_url }}"></mj-social-element>
          {% endif %}
          {% if __design__social_tumblr_url %}
            <mj-social-element name="tumblr" href="{{ __design__social_tumblr_url }}"></mj-social-element>
          {% endif %}
          {% if __design__social_linkedin_url %}
            <mj-social-element name="linkedin" href="{{ __design__social_linkedin_url }}"></mj-social-element>
          {% endif %}
          {% if __design__social_xing_url %}
            <mj-social-element name="xing" href="{{ __design__social_xing_url }}"></mj-social-element>
          {% endif %}
        </mj-social>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>